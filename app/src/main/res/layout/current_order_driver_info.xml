<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/current_order_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9"
        app:srcCompat="@drawable/current_order_driver" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/driver_Image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginTop="8dp"
        android:src="@color/black"
        app:civ_border_color="@color/colorPrimaryDark"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView12"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="@+id/imageView12"
        app:layout_constraintTop_toTopOf="@+id/imageView12" />


    <Button
        android:id="@+id/driverChat"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="#00000000"
        app:layout_constraintBottom_toBottomOf="@+id/imageView12"
        app:layout_constraintEnd_toEndOf="@+id/imageView12" />

    <Button
        android:id="@+id/driverCall"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="#00ffffff"
        app:layout_constraintBottom_toBottomOf="@+id/imageView12"
        app:layout_constraintStart_toStartOf="@+id/imageView12" />

    <TextView
        android:id="@+id/driverRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="TextView"
        android:textColor="@color/colorSheetText"
        app:layout_constraintEnd_toEndOf="@+id/driver_Image"
        app:layout_constraintStart_toStartOf="@+id/driver_Image"
        app:layout_constraintTop_toBottomOf="@+id/driver_Image" />

    <TextView
        android:id="@+id/driverName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textColor="@color/colorSheetText"
        app:layout_constraintEnd_toEndOf="@+id/driverRating"
        app:layout_constraintStart_toStartOf="@+id/driverRating"
        app:layout_constraintTop_toBottomOf="@+id/driverRating" />

    <ImageView
        android:id="@+id/car_Image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView12"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="@+id/imageView12"
        app:layout_constraintTop_toTopOf="@+id/imageView12"
        app:srcCompat="@drawable/car_img" />

    <TextView
        android:id="@+id/carModel"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="TextView"
        android:textColor="@color/colorSheetText"
        app:layout_constraintEnd_toEndOf="@+id/car_Image"
        app:layout_constraintStart_toStartOf="@+id/car_Image"
        app:layout_constraintTop_toBottomOf="@+id/car_Image" />

    <TextView
        android:id="@+id/carNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textColor="@color/colorSheetText"
        app:layout_constraintBottom_toTopOf="@+id/driverChat"
        app:layout_constraintEnd_toEndOf="@+id/carModel"
        app:layout_constraintStart_toStartOf="@+id/carModel"
        app:layout_constraintTop_toBottomOf="@+id/carModel" />

    <Button
        android:id="@+id/OrderCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:text="    Cancel Order    "
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>