<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>
    <style name="MyGravity" parent="Theme.AppCompat.Light" ></style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="BubbleTextFrame">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">@dimen/chat_babble_margin</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TransparentTheme" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AvatarImageViewStyle.Right" />

    <style name="AvatarImageViewStyle.Left" />

    <style name="AvatarImageViewStyle">
        <item name="android:layout_width">@dimen/image_view_small_avatar_layout_width</item>
        <item name="android:layout_height">@dimen/image_view_small_avatar_layout_width</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:src">@drawable/dummy_image</item>
        <item name="civ_border_width">@dimen/avatar_border_width</item>
        <item name="civ_border_color">@color/dark_gray</item>
    </style>
    <style name="WidgetTextMessage.Right" />

    <style name="WidgetTextMessage.Left" />

    <style name="WidgetTextMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="CustomWidgetFrame.Right">
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="LinkPreviewFrame">
        <item name="android:layout_width">@dimen/link_preview_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LinkPreviewFrame.Right"/>

    <style name="LinkPreviewFrame.Left" />

    <style name="TextViewTextMsg.Right" />

    <style name="TextViewTextMsg.Left" />

    <style name="TextViewTextMsg">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:paddingRight">@dimen/padding_small</item>
        <item name="android:autoLink">all</item>
        <item name="android:textColorLink">@color/text_color_link</item>
        <item name="android:textIsSelectable">true</item>
    </style>
    <style name="CustomWidgetFrame.Left" />

    <style name="CustomWidgetFrame">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TextViewTimeMsg.Right">
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="TextViewTimeMsg.Left" />

    <style name="TextViewTimeMsg">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>


    <style name="LinearWidgetTextMsg.Right">
        <item name="android:paddingRight">@dimen/padding_medium</item>
    </style>

    <style name="LinearWidgetTextMsg.Left">
        <item name="android:paddingLeft">@dimen/padding_medium</item>
    </style>

    <style name="LinearWidgetTextMsg">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="BubbleTextFrame.Right">
        <item name="android:background">@drawable/chat_bubble</item>
    </style>
    <style name="BubbleTextFrame.Left">
        <item name="android:background">@drawable/chat_bubble</item>
    </style>
    <style name="alert_dialog_theme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>
    <style name="ToolbarTheme" parent="android:Theme.Holo">
        <item name="android:homeAsUpIndicator">@drawable/back_button_image</item>
    </style>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="tv_small" parent="tv_normal">
        <item name="android:textSize">@dimen/nav_header_vertical_spacing</item>
    </style>
    <style name="tv_normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/activity_vertical_margin</item>
    </style>
    <style name="TextAppearance.App.TextInputLayout"
        parent="@android:style/TextAppearance">
        <item name="colorAccent">@android:color/black</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Custom" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Adding Complaintâ€¦</item>
        <item name="DialogSpotColor">@android:color/holo_orange_dark</item>
        <item name="DialogSpotCount">4</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">18sp</item><!-- text size in menu-->
        <item name="android:listPreferredItemHeightSmall">50dp</item><!-- item size in menu-->
    </style>

    <style name="AppTheme.BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppTheme.BottomSheetStyle</item>
    </style>

    <style name="AppTheme.BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_hideable">true</item>
        <item name="behavior_skipCollapsed">true</item>
    </style>


    <style name="AppTheme.BottomSheetDialog.Custom" parent="AppTheme.BottomSheetDialog">
        <item name="bottomSheetBuilderItemTextColor">@color/colorPrimaryDark</item>
        <item name="bottomSheetBuilderBackgroundColor">@android:color/white</item>
        <item name="bottomSheetBuilderTitleTextColor">@color/colorAccent</item>
    </style>


    <style name="ImageViewAttach.Right">
        <item name="android:layout_marginRight">@dimen/padding_common</item>
    </style>

    <style name="ImageViewAttach.Left">
        <item name="android:layout_marginLeft">@dimen/padding_common</item>
    </style>

    <style name="ImageViewAttach">
        <item name="android:layout_width">@dimen/chat_attach_width</item>
        <item name="android:layout_height">@dimen/chat_attach_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

</resources>

