<?xml version="1.0" encoding="utf-8"?>
<layer-list>
    <item  xmlns:android="http://schemas.android.com/apk/res/android"
        android:top="1dp"
        android:bottom="1dp">
        <shape
            android:shape="rectangle" >

            <solid android:color="@color/colorPrimary"/>

            <stroke
                android:width="2dip"
                android:color="#c0c2c0" />

            <corners
                android:radius="15dp"


                android:topRightRadius="5dp" />
            <!-- If you want to add some padding -->
            <padding
                android:left="15dp"
                android:top="5dp"
                android:right="15dp"
                android:bottom="7dp"    >
            </padding>



        </shape>
    </item>

</layer-list>